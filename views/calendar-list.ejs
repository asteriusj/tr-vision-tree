<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">

    <link rel="stylesheet" href="/css/styles.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <h1><%= title %></h1>

    <ul>
      <% for(var i=0; i<calendars.length; i++) { %>
      <li>
        <a href="/calendars/<%=encodeURIComponent(calendars[i].id) %>" title="<%=calendars[i].description %>" style="background: <%=calendars[i].backgroundColor %>;color: <%=calendars[i].foregroundColor %>">
          <%=calendars[i].summary %>
        </a>
      </li>
      <% } %>
    </ul>

    <form method="POST" action="/calendars/create">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" />
      <button type="submit">Create New Calendar</button>
    </form>


    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>