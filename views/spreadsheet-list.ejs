<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <h1><%= title %></h1>

    <ul>
      <% for(var i=0; i<spreadsheets.length; i++) { %>
      <li>
        <a href="/spreadsheets/<%=spreadsheets[i].id %>">
          <img src="<%= spreadsheets[i].iconLink %>" alt="<%= spreadsheets[i].mimeType %>" title="<%= spreadsheets[i].mimeType %>" />
          <%=spreadsheets[i].title %>
        </a>
      </li>
      <% } %>
    </ul>

    <form method="POST" action="/spreadsheets/create">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" />
      <button type="submit">Create New Spreadsheet</button>
    </form>
  </body>
</html>